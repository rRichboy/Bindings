<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="Bindings.Views.EditProducts"
        Title="EditProducts"
        Width="400" Height="200">
    
        <StackPanel HorizontalAlignment="Center" Spacing="10">
                <TextBox Watermark="Название:" Name="nm"/>
                <TextBox Watermark="Цена:" Name="pr"/>
                <TextBox Watermark="Количество:" Name="ct"/>
                <Button Width="120" HorizontalContentAlignment="Center" Content="Изменить" Click="EditProduct_Click" Margin="5" Background="Green"/>
        </StackPanel>        
</Window>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        x:Class="Bindings.Views.AddProducts"
        Title="Добавление продукта"
        Width="400" Height="200">
        
        <StackPanel HorizontalAlignment="Center" Spacing="5">
                <TextBlock Text="Продукты:"/>
                <TextBox Watermark="Название:" Name="nm"/>
                <TextBox Watermark="Цена:" Name="pr"/>
                <TextBox Watermark="Количество:" Name="ct"/>
                <Button Width="120" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Content="Выбрать" Click="AddButton_Click" Background="Green"/>
                <TextBlock Name="Error" Foreground="Red"/>
        </StackPanel>
</Window>
